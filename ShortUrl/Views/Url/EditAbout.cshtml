@using ShortUrl.Models.DTOs
@model AboutDTO
@{
}

<h1>Edit About</h1>
<a class="btn btn-primary" asp-action="About">Back</a>
<div class="container" style="margin-top:20px">
    <form asp-action="EditAbout" asp-controller="Url">
        <div class="my-2">
            <label>Url</label>
            <textarea class="form-control" asp-for="Text">@Model.Text</textarea>
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>

        <div class="my-2">
            <button type="submit" class="btn btn-primary">Edit</button>
        </div>
    </form>
</div>
